{
  "name": "krebit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "packageManager": "yarn@1.22.18",
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -e .env -- turbo run dev --parallel --no-cache",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev-api": "dotenv -e .env -- turbo run dev --filter=api --no-cache",
    "dev-webpage": "dotenv -e .env -- turbo run dev --filter=website --parallel --no-cache",
    "dev-dapp": "dotenv -e .env -- turbo run dev --filter=dapp --parallel --no-cache",
    "build-api": "turbo run build --filter=api",
    "build-webpage": "turbo run build --filter=website",
    "build-dapp": "turbo run build --filter=dapp"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrebitDAO/krebit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KrebitDAO/krebit/issues"
  },
  "homepage": "https://github.com/KrebitDAO/krebit#readme",
  "devDependencies": {
    "dotenv-cli": "^6.0.0",
    "turbo": "^1.2.9"
  }
}
